{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    // 8-3 -- [BEGIN] module 相關設定
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // 8-3 -- [END]
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true, // To prevent null or undefined values from being assigned to properties in an object
    // 8-4 -- [BEGIN] root path settings
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
    // 8-4 -- [END]
  }
}
